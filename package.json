{
  "name": "@tim-smart/actualbudget-sync",
  "version": "0.4.5",
  "description": "CLI for syncing banks with Actual Budget",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "repository": {
    "url": "https://github.com/tim-smart/actualbudget-sync.git",
    "type": "git"
  },
  "scripts": {
    "prepare": "husky && effect-language-service patch",
    "test": "vitest",
    "codegen": "build-utils prepare-v2",
    "clean": "rimraf rm -rf dist/*",
    "build": "tsup && pnpm copy-package-json",
    "build:ts": "tsup",
    "copy-package-json": "tsx scripts/copy-package-json.ts",
    "check": "tsc --noEmit && oxlint -c .oxlintrc.json",
    "changeset-version": "changeset version",
    "changeset-publish": "pnpm build && changeset publish"
  },
  "keywords": [],
  "author": "Tim Smart <hello@timsmart.co>",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@effect/language-service": "^0.74.0",
    "@effect/platform-node": "https://pkg.pr.new/Effect-TS/effect-smol/@effect/platform-node@5d8abe4",
    "@effect/vitest": "https://pkg.pr.new/Effect-TS/effect-smol/@effect/vitest@5d8abe4",
    "@types/node": "^25.2.3",
    "effect": "https://pkg.pr.new/Effect-TS/effect-smol/effect@5d8abe4",
    "glob": "^13.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.48.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "tar": "7.5.9",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@actual-app/api": "26.2.0",
    "@actual-app/crdt": "^2.1.0",
    "better-sqlite3": "^12.6.2",
    "compare-versions": "^6.1.1",
    "google-protobuf": "^4.0.1",
    "node-fetch": "^3.3.2",
    "playwright": "^1.58.2",
    "uuid": "^13.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
